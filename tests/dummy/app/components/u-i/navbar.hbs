<nav class="flex items-center justify-between flex-wrap p-3 pin-t fixed w-full z-20 bg-gradient-to-r from-orange-600 to-gray-800 text-white" ...attributes>

  {{!-- brand --}}
  <div class="flex items-center flex-no-shrink mr-6">
    <LinkTo @route="index" class="font-semibold text-xl tracking-tight text-white no-underline text-center">
      ember-themed
    </LinkTo>
  </div>

  {{!-- hamburger --}}
  <div class="block md:hidden">
    <button type="button" {{on "click" (toggle "toggleNav" this)}} class="flex items-center px-3 py-2 border rounded text-blue-300 border-blue-400 hover:text-white hover:border-white">
      <svg class="fill-current h-3 w-3" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><title>Menu</title><path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"/></svg>
    </button>
  </div>

  <div class="w-full flex-grow md:flex md:items-center md:w-auto {{if this.toggleNav "block" "hidden"}}">
    <div class="text-sm md:flex-grow py-4 lg:py-0">
      {{#let "border-b-2 border-white" "block lg:inline-block mb-2 lg:mb-0 lg:mr-2 font-semibold tracking-tight text-white no-underline" as |activeClass class|}}
        <LinkTo @route="index" @activeClass={{activeClass}} class={{class}}>Docs</LinkTo>
        <LinkTo @route="examples" @activeClass={{activeClass}} class={{class}}>Examples</LinkTo>
        <a href="https://github.com/dknutsen/ember-themed/tree/master/tests/dummy/app" target="_blank" rel="noreferrer noopener" title="View the source code for this docs site" class={{class}}>Source</a>
      {{/let}}
    </div>

    <div>
      {{yield}}
    </div>
  </div>
</nav>